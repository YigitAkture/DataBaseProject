@using DatabaseProject.Data.Models
@model University

@{
    ViewData["Title"] = "Create";
}

<div>
    <h1>Create</h1>
    <a class="btn btn-danger float-end" asp-action="Index">Back to List</a>
</div>

<h4>University</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Name</label>
                <input asp-for="UniversityName" class="form-control" />
                <span asp-validation-for="UniversityName" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label class="control-label">Address</label>
                <input asp-for="UniversityAddress" class="form-control" />
                <span asp-validation-for="UniversityAddress" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}