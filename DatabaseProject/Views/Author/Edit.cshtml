@using DatabaseProject.Data.Models
@model Author

@{
    ViewData["Title"] = "Edit";
}

<div>
    <h1>Edit</h1>
    <a class="btn btn-danger float-end" asp-action="Index">Back to List</a>
</div>

<h4>Author</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Id</label>
                <input asp-for="AuthorId" class="form-control" />
                <span asp-validation-for="AuthorId" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label class="control-label">Name</label>
                <input asp-for="AuthorName" class="form-control" />
                <span asp-validation-for="AuthorName" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label class="control-label">Surname</label>
                <input asp-for="AuthorSurname" class="form-control" />
                <span asp-validation-for="AuthorSurname" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label class="control-label">Age</label>
                <input asp-for="AuthorAge" class="form-control" />
                <span asp-validation-for="AuthorAge" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}