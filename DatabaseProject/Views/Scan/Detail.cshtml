@model DatabaseProject.Data.Models.Thesis

@{
    ViewData["Title"] = "Details";

}

<div class="row">
    <h2 class="col-10">Details</h2>
    <a class="btn btn-danger col-2 float-end" href="javascript:history.go(-1)">Back to List</a>
</div>
<hr />
<ol class="list-group list-group-numbered">
    <li class="list-group-item d-flex justify-content-between align-items-start">
        <div class="ms-2 me-auto">
            <div class="fw-bold">Thesis No</div>
            @Model.ThesisNo
        </div>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-start">
        <div class="ms-2 me-auto">
            <div class="fw-bold">Title</div>
            @Model.Title
        </div>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-start">
        <div class="ms-2 me-auto">
            <div class="fw-bold">Abstract</div>
            @Model.Abstract
        </div>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-start">
        <div class="ms-2 me-auto">
            <div class="fw-bold">Author</div>
            @Model.Author.AuthorName @Model.Author.AuthorSurname
        </div>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-start">
        <div class="ms-2 me-auto">
            <div class="fw-bold">Type</div>
            @Model.Type
        </div>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-start">
        <div class="ms-2 me-auto">
            <div class="fw-bold">Number of Pages</div>
            @Model.NumPages
        </div>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-start">
        <div class="ms-2 me-auto">
            <div class="fw-bold">Language</div>
            @Model.Language
        </div>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-start">
        <div class="ms-2 me-auto">
            <div class="fw-bold">Submission Date</div>
            @Model.SubmissionDate.ToString("dd/MM/yyyy")
        </div>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-start">
        <div class="ms-2 me-auto">
            <div class="fw-bold">University</div>
            @Model.University.UniversityName
        </div>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-start">
        <div class="ms-2 me-auto">
            <div class="fw-bold">Institue</div>
            @Model.Institute.InstituteName
        </div>
    </li>
    @if (Model.Supervisor != null)
    {
        <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="ms-2 me-auto">
                <div class="fw-bold">Supervisor</div>
                @Model.Supervisor.SupervisorName @Model.Supervisor.SupervisorSurname
            </div>
        </li>
    }
    @if (Model.CoSupervisor != null)
    {
        <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="ms-2 me-auto">
                <div class="fw-bold">CoSupervisor</div>
                @Model.CoSupervisor.CoSupervisorName @Model.CoSupervisor.CoSupervisorSurname
            </div>
        </li>
    }
    <li class="list-group-item d-flex justify-content-between align-items-start">
        <div class="ms-2 me-auto">
            <div class="fw-bold">Keywords</div>
            @string.Join(", ", Model.Keywords.Select(x => x.KeywordName).ToList()).Trim()
        </div>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-start">
        <div class="ms-2 me-auto">
            <div class="fw-bold">Subjects</div>
            @string.Join(", ", Model.TSubjects.Select(x => x.SubjectTopic.SubjectTopicName).ToList()).Trim()
        </div>
    </li>
</ol>