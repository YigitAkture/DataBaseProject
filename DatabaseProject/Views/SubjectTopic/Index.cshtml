@model IEnumerable<DatabaseProject.Data.Models.SubjectTopic>

@{
    ViewData["Title"] = "Subject Topic";
}

<h1>Subject Topics</h1>

<p>
    <a class="btn btn-primary float-end" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th class="text-end">
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.SubjectTopicName
                </td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.SubjectTopicId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.SubjectTopicId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>